{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "prisma generate && prisma migrate deploy && next build",
  "crons": [
    {
      "path": "/api/stocks/refresh",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/crypto/refresh",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/watchlist/top/refresh",
      "schedule": "0 0 * * *"
    }
  ]
}
